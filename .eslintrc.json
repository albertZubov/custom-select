{
  "extends": ["htmlacademy/vanilla", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow",
        "endOfLine": "auto"
      }
    ],
    "no-unused-expressions": [
      1,
      {
        "allowTernary": true
      }
    ],
    "prefer-const": 0,
    "no-unused-vars": 0
  },
  "env": {
    "es2017": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
